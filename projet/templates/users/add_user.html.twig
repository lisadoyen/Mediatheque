{% extends "layout.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/article-form.css') }}">
{% endblock %}
{% block body %}
<div class="container">
    <h1 class="mt-5">Ajouter un utilisateur</h1><hr>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="row mb-5">
            <div class="col-sm">
                <a href="{{path('users_accueil')}}" class="edit-btn">Annuler</a>
            </div>
            <div class="col-sm">
                <button type="submit" class="edit-btn">Valider</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}