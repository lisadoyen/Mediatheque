{% extends "layout.html.twig" %}
{% block body %}
    <div class="container cadre">

        <h1>Genre</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ genre.libelle }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>
                    {% for cat in genre.categories %}
                        {{ cat.libelle }}
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col"><a href="{{ path('genre_edit', {'id': genre.id}) }}" class="edit-btn">Modifier</a></div>
            <div class="col">{{ include('genre/_delete_form.html.twig') }}</div>
        </div>

        <a href="{{ path('genre_index') }}">revenir a la liste</a>
    </div>
{% endblock %}
