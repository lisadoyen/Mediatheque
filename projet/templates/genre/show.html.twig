<!DOCTYPE html>

<title>Genre</title>

{% block body %}
    <h1>Genre</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ genre.id }}</td>
        </tr>
        <tr>
            <th>Libelle</th>
            <td>{{ genre.libelle }}</td>
        </tr>
        <tr>
            <th>Categories</th>
            <td>
                {% for cat in genre.categories %}
                    {{ cat.libelle }}
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('genre_index') }}">back to list</a>

    <a href="{{ path('genre_edit', {'id': genre.id}) }}">edit</a>

    {{ include('genre/_delete_form.html.twig') }}
{% endblock %}
