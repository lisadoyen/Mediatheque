<!DOCTYPE html>

<title>Fonction index</title>

{% block body %}
    <h1>Fonction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fonction in fonctions %}
            <tr>
                <td>{{ fonction.id }}</td>
                <td>{{ fonction.libelle }}</td>
                <td>
                    <a href="{{ path('fonction_show', {'id': fonction.id}) }}">show</a>
                    <a href="{{ path('fonction_edit', {'id': fonction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fonction_new') }}">Create new</a>
{% endblock %}
