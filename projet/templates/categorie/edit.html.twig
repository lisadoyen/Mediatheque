{% extends "layout.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/article-form.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/datepicker.css') }}">
{% endblock %}
{% block body %}
<div class="container mt-5">
    <h1>Modifier les règles pour un {{ categorie.libelle }}</h1><br>

    {{ include('categorie/_form.html.twig', {'button_label': 'Valider'}) }}

    <a href="{{ path('categorie_index') }}" class="edit-btn ml-0">Retourner à la liste</a>

    {#{ include('categorie/_delete_form.html.twig') }#}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/datepicker.js') }}"></script>
{% endblock %}