<!DOCTYPE html>

<title>Article index</title>

{% block body %}
    <h1>Article index</h1>
    <a href="{{ path('article_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gencode</th>
                <th>CodeArticle</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Vignette</th>
                <th>DatePublication</th>
                <th>MontantObtention</th>
                <th>MontantCaution</th>
                <th>MontantVente</th>
                <th>Observation</th>
                <th>Numerique</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.gencode }}</td>
                <td>{{ article.codeArticle }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.vignette }}</td>
                <td>{{ article.datePublication ? article.datePublication|date('Y-m-d') : '' }}</td>
                <td>{{ article.montantObtention }}</td>
                <td>{{ article.montantCaution }}</td>
                <td>{{ article.montantVente }}</td>
                <td>{{ article.observation }}</td>
                <td>{{ article.numerique ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
