{% extends "layout.html.twig" %}
{% block body %}
    <div class="container cadre">
    <h1>Liste des nouveautés</h1><br>

        {% if nouveaute is not empty %}
            <div class="row mb-5">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Vignette</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Consulter</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for nouv in nouveaute %}
                        <tr>
                            <td>
                                {%  if nouv.vignette is not empty %}
                                    <img src="{{ nouv.vignette }}" alt="image de {{ nouv.titre }}" width="120" height="150">
                                {% else %}
                                    <img src="{{asset('assets/images/noImage.jpg')}}" alt="pas d'image" width="120" height="120">
                                {% endif %}
                            </td>
                            <td>
                                {{ nouv.titre | capitalize }}
                            </td>
                            <td>
                                {{ nouv.dateCreation | date('d/m/Y') }}
                            </td>
                            <td class="col-3">
                                <a href="{{ path('article_details', {id: nouv.id}) }}" class="btn edit-btn">Voir plus de détails</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="col-sm m-2">
                <b>Aucune nouveauté trouvée</b>
            </div>
        {% endif %}
        <hr class="mb-5">
        <div class="pagination">
            {{ knp_pagination_render(nouveaute)}}
        </div>
    </div>
{% endblock %}