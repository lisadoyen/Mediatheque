{% extends "layout.html.twig" %}
{% block body %}
<div class="container cadre">
    <h1>Liste des rubrique</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Categories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rubrique in rubriques %}
            <tr>
                <td>{{ rubrique.id }}</td>
                <td>{{ rubrique.libelle }}</td>
                <td>
                    {% for cat in rubrique.categories %}
                        <span class="alert-info rounded p-1">{{ cat.libelle }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('rubrique_show', {'id': rubrique.id}) }}">details</a>
                    <a href="{{ path('rubrique_edit', {'id': rubrique.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">pas de rubriques dans la base de donn√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rubrique_new') }}" class="edit-btn">Nouvelle rubrique</a>
</div>
{% endblock %}
